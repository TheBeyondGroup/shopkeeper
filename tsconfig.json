{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declaration": true,
    "isolatedModules": false,
    "sourceMap": true,
    "inlineSources": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react",
    "importHelpers": true,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@shopify/cli-kit/*": [
        "./node_modules/@shopify/cli-kit/dist/public/*",
        "./node_modules/@shopify/cli-kit/dist/private/*"
      ]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*"
  ]
}
